model Attendance {
  id                String           @id @default(cuid())
  member_phone      String?
  member            Member?          @relation(fields: [member_phone], references: [phone])
  service_id        String?
  service           Service?         @relation(fields: [service_id], references: [id])
  event_id          String?
  event             Event?           @relation(fields: [event_id], references: [id])
  address           String
  firstname         String
  lastname          String
  phone             String
  memberType        String
  attendance_status attendanceStatus @default(absent)
  date              DateTime         @default(now())
  time              DateTime         @default(now())
  created_at        DateTime         @default(now())

  @@index([service_id, time])
  @@index([event_id, time])
}

model Service {
  id          String       @id @default(cuid())
  name        String       @unique
  dayOfWeek   String
  startTime   String
  endTime     String
  attendances Attendance[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

model Event {
  id          String       @id @default(cuid())
  name        String       @unique
  date        DateTime
  endDate     DateTime?
  startTime   String
  endTime     String
  attendances Attendance[]
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
}

enum memberType {
  regular
  visitor
}

enum gender {
  male
  female
}

enum attendanceStatus {
  absent
  present
}
